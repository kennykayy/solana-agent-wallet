# =============================================================
# Solana Agent Wallet — Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# =============================================================

# Solana Network — always devnet for development
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet

# Master authority keypair (base58 encoded)
# Generate with: npm run generate-wallet
# Fund with: solana airdrop 2 <address> --url devnet
MASTER_PRIVATE_KEY=

# Optional: custom RPC for higher rate limits (e.g. Helius free tier)
# SOLANA_RPC_URL=https://devnet.helius-rpc.com/?api-key=YOUR_KEY

# Agent configuration
MAX_AGENTS=5
DEFAULT_SOL_PER_AGENT=0.5
AGENT_SPENDING_LIMIT_SOL=0.1
AGENT_DAILY_LIMIT_SOL=0.3

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/agent.log
